{
	"name": "opsiconfd",
	"dockerComposeFile": "../docker/dev-opsiconfd-compose.yml",
	"service": "opsiconfd-dev",
	"workspaceFolder": "/workspace",
	"postCreateCommand": ".devcontainer/post_create.sh",
	"postStartCommand": ".devcontainer/post_start.sh",
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
		"DEV_USER": "${localEnv:USER}",
		"DEV_UID": "${localEnv:UID}"
	},
	"settings": {
		"python.pythonPath": ".venv/bin/python",
		"editor.formatOnType": true,
		"editor.formatOnPaste": true,
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		},
		"files.trimTrailingWhitespace": true,
		"files.autoSave": "onFocusChange",
		"python.formatting.provider": "black",
		"python.formatting.blackPath": ".venv/bin/tan",
		"python.terminal.activateEnvironment": false,
		"python.testing.pytestArgs": [
			"-vv",
			"tests"
		],
		"python.testing.unittestEnabled": false,
		"python.testing.nosetestsEnabled": false,
		"python.testing.pytestEnabled": true,
		"python.testing.pytestPath": ".venv/bin/pytest",
		"python.linting.enabled": true,
		"python.linting.flake8Enabled": true,
		"python.linting.pylintEnabled": true,
		"python.linting.pylintCategorySeverity.refactor": "Information",
		"python.linting.pylintArgs": [
			"--load-plugins",
			"perflint"
		],
		"python.linting.mypyEnabled": true,
		"python.linting.mypyArgs": [
			"--show-error-codes"
		],
		"files.trimTrailingWhitespace": true,
		"python.languageServer": "Pylance"
	},
	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ryanluker.vscode-coverage-gutters"
	],
	"remoteUser": "${localEnv:USER}"
}
